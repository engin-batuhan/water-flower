<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark modda Theme.WaterMyFlower’ın override’u -->
    <style name="Theme.WaterMyFlower" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Dark mod primary renkler -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/green_900</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary renkler -->
        <item name="colorSecondary">@color/green_accent_200</item>
        <item name="colorSecondaryVariant">@color/green_accent_400</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Sistem bar arka planlarını gerçekten çiz -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- StatusBar & NavigationBar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarDividerColor"
            tools:targetApi="28">?attr/colorPrimaryVariant</item>

        <!-- Dark mod arka plan & surface -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>

        <!-- Dark mod metin renkleri -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
    </style>

</resources>
