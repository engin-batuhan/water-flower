<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
      Karanlık modda Theme.WaterMyFlower’ın override’u:
      Burada birincil, arka plan ve metin renklerini dark versiyonlara ayarlıyoruz.
    -->
    <style name="Theme.WaterMyFlower" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Dark mod için birincil rengi biraz daha koyu aldık -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/green_900</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Dark mod için ikincil renkleri koruyoruz -->
        <item name="colorSecondary">@color/green_accent_200</item>
        <item name="colorSecondaryVariant">@color/green_accent_400</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Dark mod arka plan ve surface rengi -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>

        <!-- Dark mod metin renkleri -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
    </style>

</resources>
