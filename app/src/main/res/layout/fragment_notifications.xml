<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <!-- =====================================================
             Ayarlar Başlığı:
             ActionBar (Activity) zaten “Settings” başlığını gösteriyor,
             bu yüzden fragment'in içinde başlık koymaya gerek yok.
             Ancak eğer fragment içinde farklı bir başlık kullanmak istersen:
        ========================================================-->
        <!--
        <TextView
            android:id="@+id/text_settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="?attr/colorOnBackground"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />
        -->

        <!-- ===========================
             Account Bölümü
             =========================== -->
        <TextView
            android:id="@+id/label_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="Account"
            android:textColor="?attr/colorOnBackground"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorSurface"
            android:gravity="center_vertical">

            <!-- Profil Fotoğrafı (örnek olarak kamera ikonu kullanıldı) -->
            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"
                android:background="?attr/colorPrimaryVariant"
                android:padding="4dp"
                android:layout_marginEnd="8dp"
                android:clipToOutline="true"
                android:contentDescription="Profile Photo"
                app:tint="?attr/colorOnSurface" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samet Albayrakoğlu"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_account_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sametalbayrakoglu@gmail.com"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- ==============================
             Notifications Bölümü
             ============================== -->
        <TextView
            android:id="@+id/label_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="?attr/colorOnBackground"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

        <!-- Watering Notifications -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="4dp"
            android:background="?attr/colorSurface"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_watering_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watering Notifications"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_watering_notifications_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receive notifications when your plants need water"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_watering_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:trackTint="?attr/colorSurface"
                app:thumbTint="?attr/colorPrimary" />
        </LinearLayout>

        <!-- Watered Notifications -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorSurface"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_watered_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watered Notifications"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_watered_notifications_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receive notifications when your plants are watered"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_watered_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:trackTint="?attr/colorSurface"
                app:thumbTint="?attr/colorPrimary" />
        </LinearLayout>

        <!-- =========
             App Bölümü
             ========= -->
        <TextView
            android:id="@+id/label_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App"
            android:textColor="?attr/colorOnBackground"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

        <!-- Language Ayarı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="4dp"
            android:background="?attr/colorSurface"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_language_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Language"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/text_language_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Theme Ayarı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="?attr/colorSurface"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_theme_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Theme"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/text_theme_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
